<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cieloo"
    tools:context=".tips.MainExposicion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_icon"
                android:backgroundTint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.064"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/Boton3"
                android:fontFamily="@font/zenkakugothicnewmedium"
                android:textColor="@android:color/white"
                android:textSize="31sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.141" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="338dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:text="@string/exp1"
                android:textColor="@android:color/white"
                android:fontFamily="@font/zenkakugothicnewmedium"
                android:textSize="19sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="194dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/exposicion1" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="329dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="@string/exp2"
                android:fontFamily="@font/zenkakugothicnewmedium"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.439"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.42"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/exposicion2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="314dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/exp3"
                android:fontFamily="@font/zenkakugothicnewmedium"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.371"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="190sp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/exposicion3" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>