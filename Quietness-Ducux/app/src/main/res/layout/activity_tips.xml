<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:animateLayoutChanges="true"
    android:background="@drawable/cieloo"
    tools:context=".activity_menu.Tips">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <Button
            android:id="@+id/btn_proy"
            android:layout_width="343dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginTop="515dp"
            android:background="@drawable/btn_uno"
            android:fontFamily="@font/zenkakugothicnewmedium"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:text="@string/Boton4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_parcial"
            android:layout_width="343dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:fontFamily="@font/zenkakugothicnewmedium"
            android:textStyle="bold"
            android:layout_marginStart="34dp"
            android:layout_marginTop="401dp"
            android:background="@drawable/btn_uno"
            android:backgroundTint="@color/white"
            android:text="@string/Boton1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_expo"
            android:layout_width="343dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:fontFamily="@font/zenkakugothicnewmedium"
            android:textStyle="bold"
            android:layout_marginStart="34dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/btn_uno"
            android:backgroundTint="@color/white"
            android:text="@string/Boton3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="379dp"
            android:layout_height="86dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:fontFamily="@font/zenkakugothicnewmedium"
            android:text="@string/tv1"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_white_icon"
            android:backgroundTint="#E0E0E0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.084"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>